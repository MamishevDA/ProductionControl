<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres</property>
    <property name="hibernate.connection.username">postgres</property>
    <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
    <mapping class="ru.ProductionControl.Test"/>
    <mapping class="ru.ProductionControl.Distillation"/>
    <mapping class="ru.ProductionControl.ConnectDB"/>
    <mapping class="ru.ProductionControl.Product"/>
    <mapping class="ru.ProductionControl.Fermentation"/>
    <mapping class="ru.ProductionControl.HibernateUtil"/>
    <mapping class="ru.ProductionControl.ConfirmPageServlet"/>
    <mapping class="ru.ProductionControl.Recipe"/>
    <mapping class="ru.ProductionControl.AddRecipeServlet"/>
    <mapping class="ru.ProductionControl.DAO"/>
    <mapping class="ru.ProductionControl.RecipeServlet"/>
    <mapping class="ru.ProductionControl.ProductServlet"/>
  </session-factory>
</hibernate-configuration>
